<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="JobAdvertisementApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:JobAdvertisementApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Job Navigator">



    <ShellContent
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:Login}"
        Route="Login" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:Register}"
        Route="Register" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:Profile}"
        Route="Profile" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:AddJobExperience}"
        Route="AddJobExperience" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:AddEducation}"
        Route="AddEducation" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:AddCourse}"
        Route="AddCourse" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:AddLanguage}"
        Route="AddLanguage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:Offer}"
        Route="Offer" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:AddOffer}"
        Route="AddOffer" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:AddCompany}"
        Route="AddCompany" />

</Shell>
